<div class="page-header">
    <h2>{{title}}</h2>
    <a href="/" class="btn-secondary">‚Üê Back to Products</a>
</div>

<div class="form-container">
    <form action="/products/edit/{{product.product_id}}" method="POST" class="product-form">
        <div class="form-group">
            <label for="product_name">Product Name *</label>
            <input type="text" id="product_name" name="product_name" required maxlength="200" value="{{product.product_name}}">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4">{{product.description}}</textarea>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="price">Price ($) *</label>
                <input type="number" id="price" name="price" step="0.01" min="0" required value="{{product.price}}">
            </div>

            <div class="form-group">
                <label for="stock_quantity">Stock Quantity *</label>
                <input type="number" id="stock_quantity" name="stock_quantity" min="0" required value="{{product.stock_quantity}}">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="category_id">Category</label>
                <select id="category_id" name="category_id">
                    <option value="">-- Select Category --</option>
                    {{#each
 categories}}
                    <option value="{{category_id}}" {{#if
 (eq category_id ../product.category_id)}}selected{{/if
}}>
                        {{category_name}}
                    </option>
                    {{/each
}}
                </select>
            </div>

            <div class="form-group">
                <label for="supplier_id">Supplier</label>
                <select id="supplier_id" name="supplier_id">
                    <option value="">-- Select Supplier --</option>
                    {{#each
 suppliers}}
                    <option value="{{supplier_id}}" {{#if
 (eq supplier_id ../product.supplier_id)}}selected{{/if
}}>
                        {{supplier_name}}
                    </option>
                    {{/each
}}
                </select>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">Update Product</button>
            <a href="/" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
