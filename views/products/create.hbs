<div class="page-header">
    <h2>{{title}}</h2>
    <a href="/" class="btn-secondary">‚Üê Back to Products</a>
</div>

<div class="form-container">
    <form action="/products/create" method="POST" class="product-form">
        <div class="form-group">
            <label for="product_name">Product Name *</label>
            <input type="text" id="product_name" name="product_name" required maxlength="200" placeholder="Enter product name">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4" placeholder="Enter product description"></textarea>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="price">Price ($) *</label>
                <input type="number" id="price" name="price" step="0.01" min="0" required placeholder="0.00">
            </div>

            <div class="form-group">
                <label for="stock_quantity">Stock Quantity *</label>
                <input type="number" id="stock_quantity" name="stock_quantity" min="0" required value="0">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="category_id">Category</label>
                <select id="category_id" name="category_id">
                    <option value="">-- Select Category --</option>
                    {{#each
 categories}}
                    <option value="{{category_id}}">{{category_name}}</option>
                    {{/each
}}
                </select>
            </div>

            <div class="form-group">
                <label for="supplier_id">Supplier</label>
                <select id="supplier_id" name="supplier_id">
                    <option value="">-- Select Supplier --</option>
                    {{#each
 suppliers}}
                    <option value="{{supplier_id}}">{{supplier_name}}</option>
                    {{/each
}}
                </select>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">Create Product</button>
            <a href="/" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
